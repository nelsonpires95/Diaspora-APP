<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:startColor="#16A085"
                android:endColor="#F4D03F"
                android:angle="270"/>
            <stroke
                android:width="1dp"
                android:color="#16A085"/>
            <corners
                android:radius="35dp"/>
            <padding
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#F4D03F"/>
            <stroke
                android:width="1dp"
                android:color="#16A085"/>
            <corners
                android:radius="35dp"/>
            <padding
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp"/>
        </shape>
    </item>


</selector>